        <h1>Quotes</h1>
        <a href="/create">Add new quote</a>
    </header>

    {{#each quotes}}
        <blockquote>
            <p class="text">
                {{this.text}}
            </p>
            <p class="context">
                @ {{this.context}}
            </p>
